{% extends 'layout.twig' %}

{% block content %}

	<h3>Заказ</h3><br>

	<p>ФИО: {{ order.fio }}</p><br>
	<p>Адрес доставки: {{ order.address }}</p><br>
	<p>Email: {{ order.email }}</p><br>
	<p>Примечания: {{ order.comment }}</p><br>

	<h3>Товары</h3><br>

	<table border='1'>
    <tr class="top_row">
        <td>Название</td>
        <td>Количество</td>
        <td>Стоимость</td>
    </tr>
	{% for product in products %}
	    <tr >
	        <td>{{ product.title }}</td>
	        <td>{{ product.quantity }}</td>
	        <td>{{ product.price }}</td>
	    </tr>
	{% endfor %}
</table><br>
<p>Итого: {{ total }}</p>

{% endblock %}